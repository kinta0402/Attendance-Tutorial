<!--form_with ⇒ 5.5,8.1参照-->
<%= form_with(model: @user, local: true) do |f| %>
<!--<#%= form_tag users_path do %> 👆の前章【前章ではform_tagを使用】-->
<!--前章では、createアクション(user_path)を指定していたが、-->
<!--form_with はおそらく自動でuserリソースのPOSTリクエストに飛ばしてくれる‼(userﾘｿｰｽのpostはcreateのみ)-->

<!--👆new,editパーシャル化(@user = new ⇒ create , edit ⇒ update)に自動で飛ばす！？ -->


<!--↓パーシャル化したエラーメッセージを表示している-->
  <%= render 'shared/error_messages', object: @user %>

  <%= f.label :name, class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :name, class: "form-control" %>

<!--  <input class="form-control" type="text" value="テスト太郎" name="user[name]"> 👆の検証 -->
<!--  <input name ="name" value ="<#%= @user.name %>"> 👆の前章 【前章はform_tagを使用】-->

  <%= f.label :email, class: "label-#{yield(:class_text)}" %>
  <%= f.email_field :email, class: "form-control" %>
  
  <%= f.label :department, class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :department, class: "form-control" %>

  <%= f.label :password, class: "label-#{yield(:class_text)}" %>
  <%= f.password_field :password, class: "form-control" %>

  <%= f.label :password_confirmation, class: "label-#{yield(:class_text)}" %>
  <%= f.password_field :password_confirmation, class: "form-control" %>

  <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
<% end %>